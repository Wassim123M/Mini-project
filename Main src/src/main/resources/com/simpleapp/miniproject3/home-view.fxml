<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox alignment="CENTER" prefHeight="500.0" prefWidth="650.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.simpleapp.miniproject3.HomeController">

    <children>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="325.0" spacing="30.0"
              style="-fx-background-color: #f22828;">
            <children>
                <Text fill="WHITE" text="Company Management System" textAlignment="CENTER" wrappingWidth="230">
                    <font>
                        <Font name="Arial Bold Italic" size="25.0" />
                    </font>
                </Text>
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="25.0">
            <HBox.margin>
                <Insets left="25.0" right="25.0" />
            </HBox.margin>
            <children>
                <Button fx:id="itemsMngBtn" onAction="#openItemsMng"
                        text="Items Management"
                        prefWidth="257.0" prefHeight="40.0"
                        style="-fx-background-color: #f22828; -fx-text-fill: white;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="sportsEquipmentBtn" mnemonicParsing="false"
                        onAction="#openSportsEquipment"
                        prefHeight="40.0" prefWidth="257.0"
                        style="-fx-background-color: #f22828;" text="Sports Equipment Management"
                        textFill="#f5f3f3">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>

                <Button fx:id="exitBtn" onAction="#onExitApp"
                        text="Exit Application"
                        prefWidth="257.0" prefHeight="40.0"
                        style="-fx-background-color: #a30d0d; -fx-text-fill: white;">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</HBox>
